// Configuração para garantir UTF-8 na compilação e execução Java no VS Code
{
    "files.encoding": "utf8",
    "java.encoding": "UTF-8",
    "java.debug.settings.vmArgs": "-Dfile.encoding=UTF-8",
    "maven.terminal.useJavaHome": true,
    "maven.terminal.customEnv": [
        {
            "environmentVariable": "JAVA_TOOL_OPTIONS",
            "value": "-Dfile.encoding=UTF-8"
        }
    ],
    "java.configuration.runtimes": [
        {
            "name": "JavaSE-17",
            // Caminho explícito para evitar problemas se JAVA_HOME não estiver definido na inicialização do VS Code
            "path": "C:/Program Files/Java/jdk-17",
            "default": true
        }
    ],
    "java.compile.nullAnalysis.mode": "automatic",
    "java.debug.settings.onBuildFailureProceed": true
}
